!!!
%html
  %head
    %title Bloggit
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults, "ckeditor/ckeditor.js", "ckeditor/adapters/jquery.js"
    = csrf_meta_tag

  %body
    = render :partial => "layouts/search_bar"
    = render :partial => "layouts/header"
    #contentWrapper
      #flashNotice
        = flash[:notice]
      #flashWarning
        = flash[:warning]
      #flashError
        = flash[:error]

      #content
        = yield

      = render :partial => "layouts/sidebar"

    -#= render :partial => "layouts/footer"
